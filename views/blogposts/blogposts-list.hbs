<h1>Blogposts list</h1>

{{#each blogpostsFromDB}}
<div>
    <a href="/blogposts/{{_id}}">
        {{title}}
    </a>
    <p>By: {{author}}</p>

    {{!-- HTML only supports get or post methods --}}
    <form action="/blogposts/{{_id}}/delete" method="POST">
        <button type="submit">Delete</button>
    </form>

    

</div>
<br><br>
{{/each}}
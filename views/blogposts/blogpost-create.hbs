<h1>Create new blog post</h1>
<form action="/create-blogpost" method="POST">
    {{!-- enctype multipart lets me insert images --}}

    <label>Author</label>
    <input type="text" name="author" />

    <label>Title</label>
    <input type="text" name="title" />

    <label>Description</label>
    <textarea row="5" cols="30" name="description"></textarea>

    <label>Date</label>
    <input type="date" name="publishedAt" />

    <label>Content</label>
    <textarea row="20" cols="100" name="content"></textarea>

    <label>Keywords</label>
    <input type="text" name="keywords" />

    <button type="submit">Create</button>

</form>




